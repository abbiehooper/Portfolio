<MudItem xs="12" sm="6" md="4">
    <MudCard Elevation="2" Style="height: 100%;">
        <MudCardMedia Image="@ImageUrl" Height="200" />
        <MudCardContent>
            <MudText Typo="Typo.h6" Class="mb-2">@Title</MudText>
            <MudText Typo="Typo.body2" Class="mb-1">@Description</MudText>
        </MudCardContent>
        <MudCardActions Class="d-flex justify-center gap-4">
            @if (!string.IsNullOrWhiteSpace(PreviewUrl))
            {
                <MudButton Variant="Variant.Filled"
                           Color="Color.Primary"
                           Size="Size.Medium"
                           Href="@PreviewUrl"
                           Target="_blank"
                           StartIcon=@Icons.Material.Filled.RemoveRedEye
                           Class="flex-grow-1">
                    Preview
                </MudButton>
            }
            
            <MudButton Variant="Variant.Outlined"
                       Color="Color.Primary"
                       Size="Size.Medium"
                       Href="@GithubUrl"
                       Target="_blank"
                       StartIcon=@Icons.Custom.Brands.GitHub
                       Class="flex-grow-1">
                Repo
            </MudButton>
        </MudCardActions>
    </MudCard>
</MudItem>