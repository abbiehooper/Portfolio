@using AbbiePortfolio.Components.ComponentLibrary
<MudContainer MaxWidth="MaxWidth.Medium" Class="mb-16" id="projects" Style="scroll-margin-top: 70px;">
    <MudText Typo="Typo.h3" Class="mb-8 d-flex justify-center" Style="font-weight: 700;">
       Projects
    </MudText>
    <MudGrid Spacing="4">
        @foreach (var project in projects)
        {
            <ProjectCard Title="@project.Title"
                         Description="@project.Description"
                         ImageUrl="@project.ImageUrl"
                         PreviewUrl="@project.PreviewUrl"
                         GithubUrl="@project.GithubUrl" />
        }
    </MudGrid>
</MudContainer>