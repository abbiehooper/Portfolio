<MudContainer MaxWidth="MaxWidth.Small" Class="mb-16" id="contact" Style="scroll-margin-top: 70px;">
    <MudText Typo="Typo.h4" Class="mb-8 d-flex justify-center" Style="font-weight: bold;">
        Contact
    </MudText>
    <MudCard Elevation="2">
        <MudCardContent>
            <MudForm @ref="form" @bind-IsValid="@success" ValidationDelay="0">
                <MudTextField T="string"
                              Label="Name"
                              @bind-Value="contactModel.Name"
                              For="@(() => contactModel.Name)"
                              Immediate="true"
                              Variant="Variant.Outlined"
                              Class="mb-4" />
                <MudTextField T="string"
                              Label="Email Address"
                              @bind-Value="contactModel.Email"
                              For="@(() => contactModel.Email)"
                              Immediate="true"
                              Variant="Variant.Outlined"
                              Class="mb-4" />
                <MudTextField T="string"
                              Label="Message"
                              Lines="5"
                              @bind-Value="contactModel.Message"
                              For="@(() => contactModel.Message)"
                              Immediate="true"
                              Variant="Variant.Outlined"
                              Class="mb-4" />
                <div class="d-flex justify-end">
                    <MudButton Variant="Variant.Filled"
                               FullWidth=false
                               Color="Color.Primary"
                               Disabled="@(!CanSubmit || sending)"
                               OnClick="@SendEmail"
                               StartIcon=@Icons.Custom.Brands.Telegram>
                        @if (sending)
                        {
                            <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2" />
                            <span>Sending...</span>
                        }
                        else
                        {
                            <span>Send Message</span>
                        }
                    </MudButton>
                </div>
            </MudForm>
        </MudCardContent>
    </MudCard>
</MudContainer>